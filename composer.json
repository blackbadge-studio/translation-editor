{
    "name": "blackbadge-studio/translation-editor",
    "description": "A Filament plugin that allows editing application translations directly in context via a modal or floating UI.",
    "keywords": [
        "blackbadge-studio",
        "laravel",
        "filamentphp",
        "translation-editor"
    ],
    "homepage": "https://github.com/blackbadge-studio/translation-editor",
    "support": {
        "issues": "https://github.com/blackbadge-studio/translation-editor/issues",
        "source": "https://github.com/blackbadge-studio/translation-editor"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sofian Mourabit",
            "email": "hello@sofian.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "spatie/laravel-translation-loader": "^2.8",
        "wedesignit/laravel-translations-import": "^1.1"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-livewire": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Blackbadgestudio\\TranslationEditor\\": "src/",
            "Blackbadgestudio\\TranslationEditor\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blackbadgestudio\\TranslationEditor\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "phpstan analyse",
        "lint": "pint",
        "refactor": "rector",
        "test": "pest",
        "test:lint": "pint --test",
        "test:refactor": "rector --dry-run"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Blackbadgestudio\\TranslationEditor\\TranslationEditorServiceProvider"
            ],
            "aliases": {
                "TranslationEditor": "Blackbadgestudio\\TranslationEditor\\Facades\\TranslationEditor"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}